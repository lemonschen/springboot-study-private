#app
    width 100%
    height 100vh
.refuse-select
    -moz-user-select none
    -webkit-user-select none
    -ms-user-select none
    -khtml-user-select none
    -o-user-select none
    user-select none
.home-page
    width 100%
    height 100vh
    position relative
    display flex
    justify-content center
    align-items center
    .home-image
        width 80%
        height 80vh
.novel-page
    width 100%
    height 100vh
    display flex
    align-items center
    flex-direction column
    .novel-scroll
        width 100%
        flex 1
        .novel-content
            width 100%
            padding 30px 0
            display flex
            flex-direction column
            justify-content center
            align-items center
            cursor pointer
            .novel-list
                max-width 1000px
                display flex
                flex-wrap wrap
                justify-content center
                .novel-image
                    width 180px
                    height 240px
    .novel-pagination
        width 100%
        height 40px
        display flex
        justify-content center
        align-items center